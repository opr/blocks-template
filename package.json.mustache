{
  "name": "{{slug}}",
  "title": "{{name}}",
  "license": "{{license}}",
  "version": "{{version}}",
  "description": "{{slug}}",
  "scripts": {
    "build": "npm run build:js && composer install --no-dev && npm run makepot",
    "build:dev": "npm run makepot",
    "build:js": "wp-scripts build assets/js/index.js",
    "check-engines": "wp-scripts check-engines",
    "check-licenses": "wp-scripts check-licenses",
    "format:js": "wp-scripts format-js",
    "lint:css": "wp-scripts lint-style assets/js",
    "lint:js": "wp-scripts lint-js assets/js",
    "lint:js-fix": "eslint assets/js --ext=js,jsx,ts,tsx --fix",
    "start": "wp-scripts start assets/js/index.js",
    "test:unit": "wp-scripts test-unit-js",
    "makepot": "wpi18n makepot --domain-path languages --pot-file {{slug}}.pot --type plugin --main-file {{slug}}.php --exclude node_modules,tests,docs"
  },
  "devDependencies": {
	"@wordpress/scripts": "^12.2.1",
	"@woocommerce/eslint-plugin": "1.1.0",
	"@woocommerce/dependency-extraction-webpack-plugin": "1.6.0"
  }
}
